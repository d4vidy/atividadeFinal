@model APS2.Application.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h1>Criar Produto</h1>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Preco" class="form-label">Pre√ßo</label>
                    <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CategoriaId" class="form-label">Categoria</label>
                    <select asp-for="CategoriaId" asp-items="@ViewBag.Categories" class="form-control">
                        <option value="">-- Selecione uma categoria --</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Criar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
