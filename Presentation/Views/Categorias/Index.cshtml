@model IEnumerable<APS2.Application.ViewModels.CategoriaViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Categorias</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <form method="get" asp-action="Index" class="form-inline">
                <div class="input-group w-100">
                    <input type="text" name="search" class="form-control" placeholder="Buscar categoria..." value="@ViewBag.SearchQuery" />
                    <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nome</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-sm btn-warning">Editar</a>
                            <form method="post" asp-action="Delete" asp-route-id="@categoria.Id" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja deletar?')">Deletar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Nenhuma categoria encontrada.
        </div>
    }
</div>

@section Scripts {
    <script>
        // AJAX search for dynamic search
        document.addEventListener('DOMContentLoaded', function () {
            var searchInput = document.querySelector('input[name="search"]');
            if (searchInput) {
                searchInput.addEventListener('keyup', function () {
                    var query = this.value;
                    if (query.length > 0) {
                        fetch(`/Categorias/Search?query=${encodeURIComponent(query)}`)
                            .then(r => r.json())
                            .then(data => {
                                if (data.success) {
                                    // Update table with results
                                    var tbody = document.querySelector('tbody');
                                    if (tbody && data.data.length > 0) {
                                        tbody.innerHTML = data.data.map(cat =>
                                            `<tr>
                                                <td>${cat.id}</td>
                                                <td>${cat.nome}</td>
                                                <td>
                                                    <a href="/Categorias/Edit/${cat.id}" class="btn btn-sm btn-warning">Editar</a>
                                                    <form method="post" action="/Categorias/Delete/${cat.id}" style="display:inline;">
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza?')">Deletar</button>
                                                    </form>
                                                </td>
                                            </tr>`
                                        ).join('');
                                    }
                                }
                            });
                    }
                });
            }
        });
    </script>
}
